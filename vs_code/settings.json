// Place your settings in this file to overwrite the default settings
{
    // Controls the font family.
    "editor.fontFamily": "Consolas, Source Code Pro, Menlo, Monaco, 'Courier New', monospace",
    // Controls the font size.
    "editor.fontSize": 15,
    // Controls after how many characters the editor will wrap to the next line. Setting this to 0 turns on viewport width wrapping (word wrapping). Setting this to -1 forces the editor to never wrap.
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },
    "workbench.welcome.enabled": false,
    "workbench.colorTheme": "Material Theme",
    "workbench.iconTheme": "vscode-icons",
    "window.openFilesInNewWindow": "off",
    "emmet.excludeLanguages": [],
    "vim.useSystemClipboard": true,
    "vim.leader": ",",
    "vim.easymotion": true,
    "vim.easymotionChangeBackgroundColor": false,
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": [
                "H"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.previousEditor",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "Y"
            ],
            "after": ["v", "$", "h", "y"]
        },
        {
            "before": [
                "L"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.nextEditor",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "z", "h"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.moveEditorLeftInGroup",
                    "args": []
                }
            ]
        },
        {
            "before": [
                "z", "l"
            ],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.moveEditorRightInGroup",
                    "args": []
                }
            ]
        }
    ]
}