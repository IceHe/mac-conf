            <autogen>__KeyToKey__ KeyCode::T, KeyCode::T, ModifierFlag::CONTROL_L, ModifierFlag::OPTION_L</autogen>

            <autogen>__KeyToKey__ KeyCode::Y, KeyCode::Y, ModifierFlag::CONTROL_L, ModifierFlag::OPTION_L</autogen>

            <autogen>__KeyToKey__ KeyCode::U, KeyCode::DELETE</autogen>
            <autogen>__KeyToKey__ KeyCode::I, KeyCode::RETURN</autogen>

            <autogen>__KeyToKey__ KeyCode::O, KeyCode::MINUS, ModifierFlag::SHIFT_L</autogen>
            <autogen>__KeyToKey__ KeyCode::P, KeyCode::EQUAL</autogen>

            <autogen>__KeyToKey__ KeyCode::A, KeyCode::KEY_1</autogen>
            <autogen>__KeyToKey__ KeyCode::S, KeyCode::KEY_2</autogen>
            <autogen>__KeyToKey__ KeyCode::D, KeyCode::KEY_3</autogen>
            <autogen>__KeyToKey__ KeyCode::F, KeyCode::KEY_4</autogen>
            <autogen>__KeyToKey__ KeyCode::G, KeyCode::KEY_5</autogen>
            <autogen>__KeyToKey__ KeyCode::H, KeyCode::KEY_6</autogen>
            <autogen>__KeyToKey__ KeyCode::J, KeyCode::KEY_7</autogen>
            <autogen>__KeyToKey__ KeyCode::K, KeyCode::KEY_8</autogen>
            <autogen>__KeyToKey__ KeyCode::L, KeyCode::KEY_9</autogen>
            <autogen>__KeyToKey__ KeyCode::SEMICOLON, KeyCode::KEY_0</autogen>
            <autogen>__KeyToKey__ KeyCode::QUOTE, KeyCode::BACKQUOTE</autogen>

            <autogen>__KeyToKey__ KeyCode::Z, KeyCode::Z, ModifierFlag::CONTROL_L, ModifierFlag::OPTION_L</autogen>
            <autogen>__KeyToKey__ KeyCode::X, KeyCode::X, ModifierFlag::CONTROL_L, ModifierFlag::OPTION_L</autogen>
            <autogen>__KeyToKey__ KeyCode::C, KeyCode::C, ModifierFlag::CONTROL_L, ModifierFlag::OPTION_L</autogen>
