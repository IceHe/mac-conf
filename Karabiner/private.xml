        <item>
            <name>Hacker Coding</name>
            <appendix>Custom</appendix>
            <identifier vk_config="true">icehe.hacker_coding</identifier>

            <autogen>__KeyToKey__ KeyCode::TAB, KeyCode::DELETE</autogen>
            <autogen>__KeyToKey__ KeyCode::CONTROL_L, KeyCode::RETURN</autogen>

            <autogen>__KeyToKey__ KeyCode::KEY_1, ConsumerKeyCode::BRIGHTNESS_DOWN</autogen>
            <autogen>__KeyToKey__ KeyCode::KEY_2, ConsumerKeyCode::BRIGHTNESS_UP</autogen>
            <autogen>__KeyToKey__ KeyCode::KEY_3, KeyCode::MISSION_CONTROL</autogen>
            <autogen>__KeyToKey__ KeyCode::KEY_4, KeyCode::LAUNCHPAD</autogen>
            <autogen>__KeyToKey__ KeyCode::KEY_5, ConsumerKeyCode::KEYBOARDLIGHT_LOW</autogen>
            <autogen>__KeyToKey__ KeyCode::KEY_6, ConsumerKeyCode::KEYBOARDLIGHT_HIGH</autogen>
            <autogen>__KeyToKey__ KeyCode::KEY_7, ConsumerKeyCode::MUSIC_PREV</autogen>
            <autogen>__KeyToKey__ KeyCode::KEY_8, ConsumerKeyCode::MUSIC_PLAY</autogen>
            <autogen>__KeyToKey__ KeyCode::KEY_9, ConsumerKeyCode::MUSIC_NEXT</autogen>
            <autogen>__KeyToKey__ KeyCode::KEY_0, ConsumerKeyCode::VOLUME_MUTE</autogen>
            <autogen>__KeyToKey__ KeyCode::MINUS, ConsumerKeyCode::VOLUME_DOWN</autogen>
            <autogen>__KeyToKey__ KeyCode::EQUAL, ConsumerKeyCode::VOLUME_UP</autogen>

            <autogen>__KeyToKey__ KeyCode::Q, KeyCode::Q, ModifierFlag::CONTROL_L, ModifierFlag::OPTION_L</autogen>
            <autogen>__KeyToKey__ KeyCode::W, KeyCode::W, ModifierFlag::CONTROL_L, ModifierFlag::OPTION_L</autogen>
            <autogen>__KeyToKey__ KeyCode::E, KeyCode::E, ModifierFlag::CONTROL_L, ModifierFlag::OPTION_L</autogen>
