{
    "title": "16. Enable Layout Rg ⌥",
    "rules": [
        {
            "description": "16. Enable Layout Rg ⌥",
            "manipulators": [
                {
                    "from": {
                        "key_code": "right_option",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "rgopt_mode",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "rgopt_mode",
                                "value": 0
                            }
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "right_option"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}