{
    "title": "F00. Enable Layout Fn",
    "rules": [
        {
            "description": "F00. Enable Layout Fn",
            "manipulators": [
                {
                    "from": {
                        "key_code": "fn",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "fn_mode",
                                "value": 1
                            }
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "fn_mode",
                                "value": 0
                            }
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "f17"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}